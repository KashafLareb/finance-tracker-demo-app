<h1>My Portfolio</h1>

<div class="mt-5 col-9">
  <h3>Search Stocks</h3>
  <%= form_tag stocks_search_path, remote: true, method: :get do %>
    <div class="input-group mb-3">
      <%= text_field_tag :stock, params[:stock], placeholder: "Stock Ticker Symbol", class: "form-control form-control-lg" %>
      <%= button_tag type: :submit, class: "btn btn-outline-dark" do %>
        <%= '🔍' %>
      <% end %>
    </div>
  <% end %>
  <div class="display-result">
    
  </div>
  
</div>
