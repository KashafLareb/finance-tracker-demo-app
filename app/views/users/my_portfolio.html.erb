<h1>My Portfolio</h1>

<div class="mt-5 col-9">
  <h3>Search Stocks</h3>
  <%= form_tag stocks_search_path, remote: true, method: :get do %>
    <div class="input-group mb-3">
      <%= text_field_tag :stock, params[:stock], placeholder: "Stock Ticker Symbol", class: "form-control form-control-lg" %>
      <%= button_tag type: :submit, class: "btn btn-outline-dark" do %>
        <%= '🔍' %>
      <% end %>
    </div>
  <% end %>

  <div class="position-relative">
    <div class="position-absolute top-0 end-0">
      <p>
        <button class="btn btn-outline-dark" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          HELP
        </button><br>
      </p>
      <div style="min-height: 120px;">
        <div class="collapse" id="collapseExample">
          <div class="card card-body bg-gradient" style="width: 300px;">
            Some valid stock ticker symbols are:
            <ul>
              <li>AMZN: for amazon
              <li>MSFT: for microsoft
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="display-result"> 
  </div>
  
</div>
