<h1>My Portfolio</h1>

<div class="mt-5 col-9">
  <h3>Search Stocks</h3>
  <%= form_tag stocks_search_path, method: :get do %>
    <div class="input-group mb-3">
      <%= text_field_tag :stock, params[:stock], placeholder: "Stock Ticker Symbol", class: "form-control form-control-lg" %>
      <%= button_tag type: :submit, class: "btn btn-outline-dark" do %>
        <%= '🔍' %>
      <% end %>
    </div>
  <% end %>

  <% if @stock %>
    <div class="card bg-dark" style="width: 24rem;">
      <div class="card-body text-light">
        <%= image_tag 'stock-exc.jpg', class: "card-img-top" %> 
        <h5 class="card-title">Stock Details:</h5>
        <p class="card-text bg-gradient">
          Name: <strong><%= @stock.name %></strong><br>
          Symbol: <strong><%= @stock.ticker %></strong><br>
          Last Price: <strong><%= @stock.last_price %></strong><br>
        </p>
      </div>
    </div>
  <% end %>
  
</div>
