<table class="table bg-brown table-hover text-light">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Ticker</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tracked_stocks.each do |stock| %>
      <tr>
        <th scope="row">1</th>
        <td><%= stock.ticker %></td>
        <td><%= stock.name %></td>
        <td><%= stock.last_price %></td>
      </tr>
    <% end %>
    <tr>
  </tbody>
</table>
