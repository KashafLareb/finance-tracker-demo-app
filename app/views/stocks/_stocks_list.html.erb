<table class="table bg-brown bg-gradient table-hover text-light">
  <thead>
    <tr>
      <th scope="col">Ticker</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tracked_stocks.each do |stock| %>
      <tr>
        <td><%= stock.ticker %></td>
        <td><%= stock.name %></td>
        <td><%= stock.last_price %></td>
        <td><%= link_to 'Remove', user_stock_path(stock), method: :delete, class: "btn btn-danger bg-gradient btn-sm", data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
    <tr>
  </tbody>
</table>
